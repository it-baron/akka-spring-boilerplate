<?xml version="1.0" encoding="UTF-8"?>
<included>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>dev.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>bgood-dev.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>20</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{dd-MM-yyyy HH:mm:ss} %5p [%-30.30logger] - %m%n</pattern>
        </encoder>
    </appender>


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{dd-MM-yyyy HH:mm:ss} %5p [%-30.30logger] - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="ON"/>
    <logger name="org.apache" level="ON"/>
    <logger name="org.hibernate" level="ON"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>

    <root level="debug">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>
</included>